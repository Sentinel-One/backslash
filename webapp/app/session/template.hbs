{{#tool-bar back_button=true}}
  <form class="navbar-form navbar-right">
    <button class="btn" {{action "toggle_archive"}}><i class="fa fa-archive"></i> {{if model.archived 'Unarchive' 'Archive'}}</button>

    {{# if model.needs_investigation }}
      {{#link-to "session.investigate" tagName="button" classNames="btn btn-mild-green"}}
        <i class="fa fa-check"></i> Mark Investigated
      {{/link-to}}

    {{else}}
      {{# if model.investigated }}
        <button class="btn btn-danger" {{action "toggle_investigated"}}><i class="fa fa-times"></i> Mark not Investigated</button>
      {{/if}}
    {{/if}}

  </form>

{{/tool-bar}}
<div class="container">

  <ul class="nav nav-tabs" role="tablist">
    {{#nav-link to="session.index" current_path=current_path}}Overview{{/nav-link}}
    {{#nav-link to="session.tests" current_path=current_path}}Tests{{/nav-link}}
    {{#if model.num_errors}}
      {{#nav-link to="session.errors" current_path=current_path}}Errors ({{model.num_errors}}){{/nav-link}}
    {{/if}}
    {{#nav-link to="session.comments" current_path=current_path}}Comments{{/nav-link}}
    {{#nav-link to="session.activity" current_path=current_path}}Activity{{/nav-link}}
  </ul>
  <div class="tabs-details">
{{outlet}}
  </div>
</div>
