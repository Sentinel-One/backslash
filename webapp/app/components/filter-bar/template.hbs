<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>


    <p class="navbar-text">
      {{title}}
    </p>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">

      <ul class="nav navbar-nav navbar-right">
        {{#each filter_config as |f|}}
        <li class="dropdown">
          <a class="dropdown-toggle {{if f.selected 'selected'}}" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" id="dropdown-{{f.name}}">
            {{#if f.selected}}
              {{title-case f.name}}: {{f.value}}
            {{else}}
              Filter by {{f.name}}
            {{/if}}
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" aria-labelledby="dropdown-{{f.name}}">
            {{#each f.options as |option|}}
              <li><a class="clickable" {{action "filter" f.name option.name}}>
                <i class="fa fa-fw {{if option.selected 'fa-check'}}"></i>{{option.name}}</a>
              </li>
            {{/each}}
          </ul>
        </li>
        {{/each}}
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
