<div class="left-badge">
  <div class="summary">
    {{#if is_running}}
      <div>
        Still running...
      </div>
    {{/if}}
    {{#if test.first_error}}
      {{test.first_error.exception_type}}: {{test.first_error.message}}
      {{#if (gt test.num_errors 1) }}
        <div>
          <i class="fa fa-exclamation-circle"></i> +{{sub test.num_errors 1}}
        </div>
      {{/if}}
    {{else}}
      {{#if (eq status 'skipped')}}
        Skipped ({{test.skip_reason}})
      {{/if}}
    {{/if}}

  </div>
</div>



<div class="details">
  {{#if is_running}}
    <div class="is-running">
      <i class="fa fa-spinner fa-spin"></i>
    </div>
  {{/if}}
  {{tests/test-name info=test.info variation=test.variation}}
  {{#if show_subjects}}
  {{subject-info subjects=test.subjects}}
  {{/if}}
  {{item-times start=test.start_time end=test.end_time humanize=humanize_times}}
</div>


<div class="right-label warnings {{if test.num_warnings 'visible'}}">
  <i class="fa fa-warning"></i> <span class="summary">{{pluralize-word test.num_warnings "Warning"}}</span>
</div>
