
<div class="row row-fluid user-profile">

  <div class="col-md-6 col-md-offset-3 user-profile-card">
    <div class="row row-fluid">
      <div class="col-md-4 col-md-offset-4 text-center">
        <img src="{{gravatarURL}}" class="img-circle img-thumbnail"/>
      </div>
    </div>
    {{#with session.content.user_info as |user_info|}}
      <div class="row row-fluid">
        <div class="col-md-4 col-md-offset-4 text-center">
          <strong>{{user_info.name}}</strong> ({{user_info.email}})
        </div>
      </div>
      <div class="row row-fluid">
        <div class="col-md-4 col-md-offset-4 text-center">
          <ul class="list-inline">
            {{#each user_info.roles as |role|}}
              <li>{{role}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
    {{/with}}
  </div>
</div>
